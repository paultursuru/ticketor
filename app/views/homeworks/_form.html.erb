<%= simple_form_for homework do |f| %>
  <div class="flex">
    <%= f.input :title, label: false, placeholder: 'your title', wrapper_html: {class: 'p-2 w-1/3'}, input_html: {class: "text-nightmode"} %>
    <%= f.input :url, label: false, placeholder: 'https://username.github.io', wrapper_html: {class: 'p-2 w-2/3'}, input_html: {class: "text-nightmode"} %>
  </div>
  <div class="flex justify-end ">
    <%= f.submit 'Save', class: 'rounded bg-emerald-700 transition-all border border-emerald-700 text-white py-2 px-4 cursor-pointer hover:text-emerald-700 hover:bg-emerald-100 hover:border-emerald-700' %>
  </div>
<% end %>
