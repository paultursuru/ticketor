<%= simple_form_for homework do |f| %>
  <div class="flex">
    <%= f.input :title, label: false, placeholder: 'title of your homework', wrapper_html: {class: 'p-2 w-1/3'} %>
    <%= f.input :url, label: false, placeholder: 'url of your homework', wrapper_html: {class: 'p-2 w-2/3'} %>
  </div>
  <div class="flex justify-end ">
    <%= f.submit 'Send !', class: 'rounded bg-emerald-700 transition-all border border-emerald-700 text-white py-2 px-4 cursor-pointer hover:text-emerald-700 hover:bg-emerald-100 hover:border-emerald-700' %>
  </div>
<% end %>
